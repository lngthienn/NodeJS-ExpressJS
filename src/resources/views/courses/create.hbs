<div class='mt-4'>
    <h3>Đăng khoá học</h3>
    <form method='post' action='/courses/store'>
        <div class='mb-3'>
            <label for='descriptions' class='form-label'>Thêm khoá học</label>
            <input
                type='text'
                class='form-control'
                id='descriptions'
                name='descriptions'
            />
        </div>
        <div class='mb-3'>
            <label for='name' class='form-label'>Mô tả</label>
            <input type='text' class='form-control' id='name' name='name' />
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video Id</label>
            <input
                type='text'
                class='form-control'
                id='videoId'
                name='videoId'
            />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khoá học</button>
    </form>
</div>