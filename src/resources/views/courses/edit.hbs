<div class='mt-4'>
    <h3>Cập nhật khoá học</h3>
    <form
        class='mt-4'
        method='post'
        action='/courses/{{course._id}}?_method=PUT'
    >
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khoá học</label>
            <input
                type='text'
                class='form-control'
                value='{{course.name}}'
                id='name'
                name='name'
            />
        </div>
        <div class='mb-3'>
            <label for='name' class='form-label'>Mô tả</label>
            <textarea
                class='form-control'
                id='descriptions'
                name='descriptions'
            >
                {{course.descriptions}}
            </textarea>
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video Id</label>
            <input
                type='text'
                class='form-control'
                value='{{course.videoId}}'
                id='videoId'
                name='videoId'
            />
        </div>
        <button type='submit' class='btn btn-primary'>Cập nhật</button>
    </form>
</div>